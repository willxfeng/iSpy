<h1><%= @art.name %></h1>

<img src="https://static.pexels.com/photos/6989/city-love-rainbow-nyc.jpg"/>

<ul>
  <li><%= @art.location %></li>
  <li><%= @art.description %></li>
  <% if @art.artist.present? %>
  <li> <%= @art.artist %></li>
  <% end %>
  <li><%= @art.category %></li>
</ul>


  <% @reviews.each do |review|  %>
    <div class="review">
    <p>Comments: <%= review.body %></p>
    <p> Rating: <%= review.rating %></p>
    <% end %>
  </div>


<%= link_to "Add New Review", new_art_review_path(@art)%><br>
<%= link_to "Edit this Review", edit_art_review_path(@art)%><br>
<%= link_to "Edit this Entry", edit_art_path %><br>
<%= link_to "Delete this entry", art_path(@art), method: :delete %><br>
<%= link_to "Home", arts_path %>
