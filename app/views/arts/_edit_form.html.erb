<%= form_for(@art) do |f| %>
  <div class="field">
    <%= f.label "Name:" %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label "Artist:"%>
    <%= f.text_field :artist %>
  </div>

  <div class="field">
    <%= f.label "Location:" %>
    <%= f.text_field :location %>
  </div>

  <div class="field">
    <%= f.label "Category:" %>
    <%= f.text_field :category %>
  </div>

  <div class="field">
    <%= f.label "Description:" %>
    <%= f.text_field :description %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: "button small round form-button" %>
  </div>
<% end %>
