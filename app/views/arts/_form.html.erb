<%= form_for(@art) do |f| %>
  <%= f.fields_for :photo do |ff| %>
    <div class="upload-image">
      <%= f.label :art_photo, 'Photo' %>
      <%= f.file_field :art_photo %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Name:" %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label "Artist:"%>
    <%= f.text_field :artist %>
  </div>

  <div class="field">
    <%= f.label "Location:" %>
    <%= f.text_field :location %>
  </div>

  <div class="field">
    <%= f.label "Category:" %>
    <%= f.text_field :category %>
  </div>

  <div class="field">
    <%= f.label "Description:" %>
    <%= f.text_field :description %>
  </div>

  <div class="actions">
    <%= f.submit class: "button round form-button" %>
  </div>
<% end %>
